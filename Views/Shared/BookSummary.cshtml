@model Project

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h5>
            @Model.Title
            <span class="badge badge-pill badge-secondary" style="float:right">
                <p>@Model.Category</p>
            </span>
        </h5>
        <p class="lead">Author: @Model.Author</p>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p class="text-muted">Price: @Model.Price</p>
        <p>Number of Pages: @Model.PageNumbers</p>
    </div>

    <form id="@Model.BookId" asp-page="/Buy" method="post">
        <input type="hidden" asp-for="BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Buy
            </button>
        </span>
    </form>
</div>
